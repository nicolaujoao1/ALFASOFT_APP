@using ALFASOFT.Application.DTOs
@model ContactDTO

@{
    ViewData["Title"] = "Edit Contact";
}


<form asp-action="Edit">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Edit contact</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">

            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input type="text" asp-for="Name" class="form-control form-control-border" id="exampleInputBorder" placeholder="">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactNumber">Contact</label>
                <input type="text" asp-for="ContactNumber" class="form-control form-control-border" id="exampleInputBorder" placeholder="">
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress">Email Address</label>
                <input type="text" asp-for="EmailAddress" class="form-control form-control-border" id="exampleInputBorder" placeholder="">
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div style="margin-bottom:5px;"></div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-info">Back</a>
                </div>
            </div>
        </div>
    </div>
</form>
